<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="GamingTabText" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.02</item>
    </style>
    
    <style name="GamingTextTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-bold</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="GamingTextSubtitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="GamingTextNeon">
        <item name="android:textColor">@color/primary</item>
        <item name="android:shadowColor">@color/primary</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">8</item>
    </style>
    
    <style name="GamingTextAccent">
        <item name="android:textColor">@color/accent</item>
        <item name="android:shadowColor">@color/accent</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">8</item>
    </style>
    
    <style name="CommandItemTitle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="CommandItemDescription">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>
    
    <style name="CommandItemBadge">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:paddingHorizontal">8dp</item>
        <item name="android:paddingVertical">4dp</item>
    </style>
</resources>
